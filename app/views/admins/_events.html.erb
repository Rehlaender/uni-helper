<div class="" id="eventrepo">
  <h3>Eventos</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>En la facultad</th>
        <th>Fecha de inicio</th>
        <th>Fecha final</th>
        <th>Organizador</th>

      </tr>
    </thead>
    <% @events.each do |event| %>
    <tbody>
      <tr class="info">
        <td><%= event.id %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.school.name %></td>
        <td><%= event.start_date.to_formatted_s(:short) %></td>
        <td><%= event.end_date.to_formatted_s(:short) %></td>
        <td><%= event.user.name %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>

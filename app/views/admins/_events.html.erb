<div class="Eventos" id="Eventos" style="display:none">
  <h3>Eventos</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>En la facultad</th>
        <th>Fecha de inicio</th>
        <th>Fecha final</th>
        <th>Organizador</th>
      </tr>
    </thead>
    <% @sietedias = 7.day.ago.to_s(:number) %>
    <tbody>
      <tr class="info">
        <% @events.each do |event| %>
        <% @eventofecha = event.created_at.to_s(:number) %>
        <% if @sietedias < @eventofecha %>
            <td><%= event.id %></td>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= event.school.name %></td>
            <td><%= event.start_date.to_formatted_s(:short) %></td>
            <td><%= event.end_date.to_formatted_s(:short) %></td>
            <td><%= event.user.name %></td>
          <% else %>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Imprimir', href="javascript:void(0)", class:"btn btn-success"%>
</div>

<div class="Eventos" id="Eventos" style="display:none">
  <h3>Eventos de esta semana</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>En la facultad</th>
        <th>Fecha de inicio</th>
        <th>Fecha final</th>
        <th>Organizador</th>
      </tr>
    </thead>
    <% @sietedias = 7.day.ago.to_s(:number) %>
    <tbody>
        <% @events.each do |event| %>
        <tr class="info">
        <% @eventofecha = event.created_at.to_s(:number) %>
        <% if @sietedias < @eventofecha %>
            <td><%= event.id %></td>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= event.school.name %></td>
            <td><%= event.start_date.to_formatted_s(:short) %></td>
            <td><%= event.end_date.to_formatted_s(:short) %></td>
            <td><%= event.user.name %></td>
          <% else %>
          <% end %>
        </tr>
        <% end %>
    </tbody>
  </table>
  <p id="pdf_link"><%= link_to "Imprimir(PDF)", admin_path(current_admin.id, :format => "pdf") %></p>
</div>

<h1>Admins</h1>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>admin</th>
      <th>Mail</th>
    </tr>
  </thead>

  <% @admins.each do |admin| %>
      <tbody>
        <tr class="info">
          <td><%= admin.id %></td>
          <td><%= link_to admin.name, admin_path(admin) %></td>
          <td><%= admin.user %></td>
          <td><%= admin.email %></td>
          <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
          <td><%= link_to "Delete", admin, :method => :delete, :confirm => "Are you sure ?"%></td>
        </tr>
      </tbody>
  <% end %>
  </table>

<div align="center">
<%= link_to 'New', new_admin_path ,:class => "btn btn-raised btn-success" %>
</div>

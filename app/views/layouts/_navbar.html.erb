<div class="navbar navbar-material-green">
  <div class="navbar-header">
    <% if logged_in? %>
    <%= link_to "#{image_tag('/applogo36px.png')}".html_safe,:home, :class=>"navbar-brand" %>
    <% else %>
    <%= link_to "#{image_tag('/applogo36px.png')}".html_safe,:root, :class=>"navbar-brand" %>
    <% end %>
  </div>
  <% if logged_in? %>
  <ul class="nav navbar-nav navbar-left">
        <li><a class="active" href="<%= posts_category_post_path(2) %>">Buscar</a></li>
        <li class="rayita"><%= link_to '|' , "javascript:void(0)"%></li>
        <li><%= link_to 'Ofrecer' , new_post_path, :class=>"link" %></li>
  </ul>
  <% else %>
  <% end %>
  <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Nosotros', :aboutus %></li>
        <li class="rayita"><%= link_to '|' , "javascript:void(0)"%></li>
        <!-- User-->
        <% if logged_in? %>
        <li class="dropdown-toggle move" data-toggle="dropdown"><i class="mdi-action-account-circle"></i><%= current_user.name %></li>
          <ul class="dropdown-menu">
            <li><%= link_to 'Cerrar sesion', logout_path, method: "delete"%></i></li>
          </ul>
        </li>
        <li class="rayita"><%= link_to '|' , "javascript:void(0)"%></li>



        <!-- No user-->
        <% else %>
        <li><%= link_to 'Iniciar sesion' , login_path %></li>
        <li class="rayita"><%= link_to '|' , "javascript:void(0)"%></li>
        <li><%= link_to 'Registrarse' , new_user_path %></li>
        <li class="rayita"><%= link_to '|' , "javascript:void(0)"%></li>
        <% end %>
      </ul>

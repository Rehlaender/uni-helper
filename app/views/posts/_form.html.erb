<div class="jumbotron col-md-6 col-md-offset-3">
<%= form_for(@post) do |f| %>

<!--  <p>
    <%= f.label :user_id %>
    <%= f.text_field :user_id, class: "form-control" %>
  </p>
-->
  <p>
    <%= current_user.name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </p>

  <p>
    <%= f.label :school_id %>
    <%= f.select :school_id, select_school,{}, class: "form-control" %>
  </p>

  <p>
    <%= f.label :category_id %>
    <%= f.select :category_id, select_category,{}, class: "form-control" %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control" %>
  </p>

  <p>
    <%= f.label :category_post_id %>
    <%= f.select :category_post_id, select_category_post,{}, class: "form-control" %>
  </p>

  <p class="text-center">
    <%= f.submit :class => "btn btn-success"%>
  </p>
<% end %>
<%= link_to 'Back', posts_path %>
</div>

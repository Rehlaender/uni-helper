<h2 class="posts_titulo" id="userdo">
  Por ahora los usuarios postearon
</h2>

<%= render 'patrocinados' %>
<div class="jumbotron  col-sm-offset-3 col-sm-9 col-md-offset-3 col-md-9">

  <div class="row">

  </div>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="panel-success <%= post.category.name %> <%= post.school.name %> col-md-4 col-sm-4" id="post">
        <div class="panel-heading" >
          <h5>Post por: <a id='userlink' href='<%= user_path(post.user.id)%>'> <%= post.user.name %></a></h5>
        </div>
        <div class="panel-body">
          <%= post.category_post.name %> <%= post.description %>
        </div>
        <div class="panel-footer">
          <%= post.category.name %> | <%= link_to 'ir al post', post %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= link_to 'Regresar', :home, :class=>"btn btn-info" %>
  </div>
</div>

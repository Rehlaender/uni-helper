<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>School</th>
      <th>Category</th>
      <th>Price</th>
      <th>Category_post</th>
    </tr>
  </thead>
  <tbody>
    <tr class="info">
      <td><%= @post.id %></td>
      <td><%= @post.user.name %></td>
      <td><%= @post.description %></td>
      <td><%= @post.school.name %></td>
      <td><%= @post.category.name %></td>
      <td><%= @post.price %></td>
      <td><%= @post.category_post.name %></td>
    </tr>
  </tbody>
</table>


<p id="notice"><%= notice %></p>
<% if logged_in_admin? %>
<div class="jumbotron col-sm-offset-2 col-md-offset-3 col-md-6 col-sm-8">
    <% if @post.event_id != nil %>
        <p>Evento: <%= link_to @post.event.name, event_path(@post.event_id) %></p>
    <% else %>
    <% end %>
  <div class="container">

    <div class="panel-success ">
      <div class="panel-heading">
        <p>
          <strong><%= @post.category_post.name %></strong>: <%= @post.description %>
        </p>
      </div>
      <div class="panel-body">
        <% if @post.category_post.name == 'Busco' %>
            <p>Estoy dispuesto a pagar: $<%= @post.price %></p>
        <% elsif @post.category_post.name == 'Ofrezco' %>
            <p>Precio: $<%= @post.price %></p>
        <% else %>
            $
        <% end %>
      </div>
      <div class="panel-footer">
        Post recomendado para la facultad: <strong><%= @post.school.name %>. </strong>
        Post por: <a href='<%= user_path(@post.user.id)%>'> <%= @post.user.name %></a>
      </div>
      <p>
        <%= link_to 'Editar', edit_post_path(@post), class: 'btn btn-primary' %>        
        <%= link_to 'Regresar', posts_path, :class=>"btn btn-info" %>
      </p>
    </div>
  </div>

</div>


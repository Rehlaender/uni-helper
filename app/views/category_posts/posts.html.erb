<div class="row posts_titulo">
  <h2 class="" id="userdo">
    Por ahora los usuarios postearon
  </h2>
  <%= render 'botones' %>
</div>

<div class="col-sm-3 col-md-3 affixed" id="patrocinados">
  <div class="row">
    <h4 class="postpatrocinados_titulo">Posts patrocinados</h4>
      <% @posts.each do |post| %>
        <div class="panel-success <%= post.category.name %> <%= post.school.name %> col-sm-12" id="post">
          <div class="panel-heading" >
            <h5>Post por: <a id='userlink' href='<%= user_path(post.user.id)%>'> <%= post.user.name %></a></h5>
          </div>
          <div class="panel-body">
            <%= post.category_post.name %> <%= post.description %>
          </div>
          <div class="panel-footer">
            <%= post.category.name %> | <%= link_to 'ir al post', post %>
          </div>
        </div>
      <% end %>
  </div>
</div>


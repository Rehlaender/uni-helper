<h1>category_post</h1>

<% @category_posts.each do |category_post| %>
  <ul>
      <li><%= category_post.id %></li>
      <li><%= category_post.name %></li>
      <li><%= link_to 'Edit', edit_category_post_path(category_post) %></li>
      <li><%= link_to "Delete", category_post, :method => :delete, :confirm => "Are you sure ?"%></li>
      </li>
  </ul>

<% end %>

<%= link_to 'New', new_category_post_path(@category_post) %> |

<h1>category posts</h1>
<table class="table table-striped table-hover " style="width: 200px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
<% @category_posts.each do |category_post| %>
<tbody>
  <tr class="info">
          <td><%= category_post.id %></td>
          <td><%= category_post.name %></td>
          <td><%= link_to 'Edit', edit_category_post_path(category_post) %></td>
          <td><%= link_to "Delete", category_post, :method => :delete, :confirm => "Are you sure ?"%></td>

      </tr>
  </tbody>
<% end %>
</table>

<%= link_to 'New', new_category_post_path(@category_post) %> |

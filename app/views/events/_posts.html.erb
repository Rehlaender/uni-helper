<% if logged_in_admin? %>
<div class="row">
  <h4 class="postpatrocinados_titulo">Posts del evento</h4>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Descripcion</th>
        <th>Para la facultad</th>
        <th>Categoria</th>
        <th>Costo</th>
        <th>Tipo de post</th>
        <th>Evento</th>
        <th>Mostrar</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
    </thead>
    <% @posts = Post.where(:event_id => @event.id) %>
    <% @posts.each do |post| %>
    <tbody>
      <tr class="info">
        <td><%= post.id %></td>
        <td><%= post.description %></td>
        <td><%= post.school.name %></td>
        <td><%= post.category.name %></td>
        <td><%= post.category_post.name %></td>
        <td>$<%= post.price %></td>
        <% if post.event_id == nil %>
            <td><small>sin evento</small></td>
        <% else %>
        <td><%= post.event.name %></td>
        <% end %>
        <td class="postsaction"><%= link_to '<i class="mdi-action-search"></i>'.html_safe, post %></td>
        <td class="postsaction"><%= link_to '<i class="mdi-content-create"></i>'.html_safe, edit_post_path(post) %></td>
        <td class="postsaction"><%= link_to '<i class="mdi-action-delete"></i>'.html_safe, post, :method => :delete, :confirm => "Estas seguro?"%></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
<% elsif logged_in? %>
<div class="row">
  <h4 class="postpatrocinados_titulo">Posts del evento</h4>
    <% @posts = Post.where(:event_id => @event.id) %>
    <% @posts.each do |post| %>
    <div class="panel-success <%= post.category.name %> <%= post.school.name %> col-md-6 col-sm-6" id="post">
      <div class="panel-heading" >
        <h5>Post por: <a id='userlink' href='<%= user_path(post.user.id)%>'> <%= post.user.name %></a> | $<%= post.price %></h5>
      </div>
      <div class="panel-body">
        <%= post.category_post.name %> <%= post.description %>
      </div>
      <div class="panel-footer">
          <%= post.category.name %>
          <%= link_to "<i class='mdi-action-launch tiny'></i>".html_safe, post %>
          <% if post.user_id == current_user.id %>
          <%= link_to '<i class="mdi-content-create tiny"></i>'.html_safe, edit_post_path(post) %>
          <%= link_to '<i class="mdi-action-delete tiny"></i>'.html_safe, post, :method => :delete, :confirm => "Estas seguro?"%>
          <% else %>
          <% end %>
          <strong><%= post.school.name%></strong>
      </div>
    </div>
    <% end %>
</div>
<% end %>

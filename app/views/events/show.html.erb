<p id="notice"><%= notice %></p>
<div class="container-fluid eventshow">
  <div class="row row-eq-height">
    <div class="leftmargin jumbotron col-md-3 ">
      <h2 class="text-center"><%= @event.name %></h2>
      <div class="postpatrocinados_titulo">
        <h5>Organizado por: <small> <a href='<%= user_path(@event.user.id)%>'> <%= @event.user.name %></a></small></h5>
        <h5>Lugar: <small><%= @event.school.name%></small></h5>
        <h5>Descripci√≥n: <small><%= @event.description %></small></h5>
        <h5>Fecha de inicio: <small><%= @event.start_date.to_formatted_s(:short) %></small></h5>
        <h5>Fecha de finalizado: <small><%= @event.end_date.to_formatted_s(:short) %></small></h5>
        <%= link_to 'Regresar', events_path, :class=>"btn btn-info" %>
        <%= link_to 'Postear', new_post_path , :class=>"btn btn-success" %>
        <% if @event.user_id == current_user.id %>
        <%= link_to '<i class="mdi-content-create"></i>'.html_safe, edit_event_path(@event) %>
        <%= link_to '<i class="mdi-action-delete "></i>'.html_safe, @event, :method => :delete, :confirm => "Estas seguro?"%>
        <% else %>
        <% end %>
      </div>
    </div>

    <div class="jumbotron col-md-offset-1 col-md-7 affixed" id="eventposts">
          <%= render 'posts' %>
    </div>
  </div>

</div>

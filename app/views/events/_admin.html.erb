<h1>Eventos</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>En la facultad</th>
      <th>Fecha de inicio</th>
      <th>Fecha final</th>
      <th>Organizador</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Borrar</th>
    </tr>
  </thead>
  <% @events.each do |event| %>
  <tbody>
    <tr class="info">
      <td><%= event.id %></td>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td><%= event.school.name %></td>
      <td><%= event.start_date.to_formatted_s(:short) %></td>
      <td><%= event.end_date.to_formatted_s(:short) %></td>
      <td><%= event.user.name %></td>
      <td class="eventsaction"><%= link_to '<i class="mdi-action-search"></i>'.html_safe, event %></td>
      <td class="eventsaction"><%= link_to '<i class="mdi-content-create"></i>'.html_safe, edit_event_path(event) %></td>
      <td class="eventsaction"><%= link_to '<i class="mdi-action-delete"></i>'.html_safe, event, :method => :delete, :confirm => "Estas seguro?"%></td>
    </tr>
  </tbody>
  <% end %>
</table>

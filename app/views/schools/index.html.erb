<h1>school</h1>
<table class="table table-striped table-hover " style="width: 200px;">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
<% @schools.each do |school| %>
<tbody>
  <tr class="info">
    <td><%= school.id %></td>
    <td><%= school.name %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to "Delete", school, :method => :delete, :confirm => "Are you sure ?"%></td>
  </tr>
</tbody>
<% end %>
</table>
<%= link_to 'New', new_school_path(@school) %> |

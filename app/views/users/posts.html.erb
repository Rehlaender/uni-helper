<h2> Tus posts</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <!--<th>ID</th>-->
      <th>Descripcion</th>
      <th>Para la facultad</th>
      <th>Categoria</th>
      <th>Costo</th>
      <th>Tipo de post</th>
      <th>Evento</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Borrar</th>
      <th>Promocionar</th>
      <th>Promocionado</th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr class="info">
      <td><%= post.description %></td>
      <td><%= post.school.name %></td>
      <td><%= post.category.name %></td>
      <td><%= post.category_post.name %></td>
      <td>$<%= post.price %></td>
      <% if post.event_id == nil %>
          <td><small>sin evento</small></td>
      <% else %>
      <td><%= post.event.name %></td>
      <% end %>
      <td class="postsaction"><%= link_to '<i class="mdi-action-search"></i>'.html_safe, post %></td>
      <td class="postsaction"><%= link_to '<i class="mdi-content-create"></i>'.html_safe, edit_post_path(post) %></td>
      <td class="postsaction"><%= link_to '<i class="mdi-action-delete"></i>'.html_safe, post, :method => :delete, :confirm => "Estas seguro?"%></td>
      <td class="postsaction"><%= link_to "Promocionar", new_promotion_path(post_param: post.id) %></td>
      <% if post.promoted != false %>
      <td class="postsaction"><i class="mdi-action-stars"></i></td>
      <% else %>
      <td>
      </td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>

<%= link_to 'Regresar', :back, :class=>"btn btn-info" %>

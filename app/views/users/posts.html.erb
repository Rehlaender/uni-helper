<h2> Tus posts</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <!--<th>ID</th>-->
      <th>Descripcion</th>
      <th>Orientado a la facultad</th>
      <th>Categoria</th>
      <th>Costo</th>
      <th>Tipo de post</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Borrar</th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr class="info">
      <td><%= post.description %></td>
      <td><%= post.school.name %></td>
      <td><%= post.category.name %></td>
      <td>$<%= post.price %></td>
      <td><%= post.category_post.name %></td>
      <td><%= link_to '<i class="mdi-action-search"></i>'.html_safe, post %></td>
      <td><%= link_to '<i class="mdi-content-create"></i>'.html_safe, edit_post_path(post) %></td>
      <td><%= link_to '<i class="mdi-action-delete"></i>'.html_safe, post, :method => :delete, :confirm => "Estas seguro?"%></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= link_to 'Regresar', :back, :class=>"btn btn-info" %>
<!--Tambien para admin
<%= link_to 'New', new_post_path(@post) %>-->

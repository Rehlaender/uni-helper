<div class="row">
  <h4 class="postpatrocinados_titulo">Posts de <%= @user.user%></h4>
    <% @posts = Post.where(:user_id => @user.id) %>
    <% @posts.each do |post| %>
    <div class="panel-success <%= post.category.name %> <%= post.school.name %> col-md-6 col-sm-6" id="post">
      <div class="panel-heading" >
        <h5>Post por: <a id='userlink' href='<%= user_path(post.user.id)%>'> <%= post.user.name %></a> | $<%= post.price %></h5>
      </div>
      <div class="panel-body">
        <%= post.category_post.name %> <%= post.description %>
      </div>
      <div class="panel-footer">
          <%= post.category.name %>
          <%= link_to "<i class='mdi-action-launch tiny'></i>".html_safe, post %>
          <% if post.user_id == current_user.id %>
          <%= link_to '<i class="mdi-content-create tiny"></i>'.html_safe, edit_post_path(post) %>
          <%= link_to '<i class="mdi-action-delete tiny"></i>'.html_safe, post, :method => :delete, :confirm => "Estas seguro?"%>
          <% else %>
          <% end %>
          <strong><%= post.school.name%></strong>
      </div>
    </div>
    <% end %>
</div>

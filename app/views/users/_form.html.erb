<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :user %><br>
    <%= f.text_field :user %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>

  <p>
    <%= f.label :mail %><br>
    <%= f.text_field :mail %>
  </p>

  <p>
    <%= f.label :telephone %><br>
    <%= f.text_field :telephone %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

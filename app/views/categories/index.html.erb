<h1>Categories</h1>
<table class="table table-striped table-hover " style="width: 200px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
<% @categories.each do |category| %>
<tbody>
  <tr class="info">
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td> <%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to "Delete", category, :method => :delete, :confirm => "Are you sure ?"%></td>

    </tr>
</tbody>
<% end %>
</table>
<%= link_to 'New', new_category_path(@category) %> |

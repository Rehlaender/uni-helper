<h1>Category</h1>

<% @categories.each do |category| %>
  <ul>
      <li><%= category.id %></li>
      <li><%= category.name %></li>
      <li><%= link_to 'Edit', edit_category_path(category) %></li>
      <li><%= link_to "Delete", category, :method => :delete, :confirm => "Are you sure ?"%></li>
      </li>
  </ul>

<% end %>

<%= link_to 'New', new_category_path(@category) %> |
